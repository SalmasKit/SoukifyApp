<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Contenu principal -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top">

            <RelativeLayout
                android:id="@+id/header_produits"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="24dp">

                <!-- Texte "Products" -->
                <TextView
                    android:id="@+id/textView_produits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/pageTitle"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:fontFamily="serif"
                    android:letterSpacing="-0.02"/>

                <!-- Sélecteur de ville -->
                <LinearLayout
                    android:id="@+id/location_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:background="@drawable/location_selector_bg"
                    android:paddingStart="12dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/map"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="@drawable/map"/>

                    <TextView
                        android:id="@+id/textView_ville"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </RelativeLayout>

            <!-- Dans ton LinearLayout qui contient le search_input, ajoute ceci APRÈS le Button : -->

            <LinearLayout
                android:id="@+id/search_bar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="20dp"
                android:gravity="center_vertical">

                <AutoCompleteTextView
                    android:id="@+id/search_input"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/search_input_bg"
                    android:hint="@string/searchHint"
                    android:textColorHint="#A0A0A0"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:gravity="center_vertical|start"
                    android:minHeight="0dp"
                    android:includeFontPadding="false"
                    android:inputType="text"
                    android:layout_gravity="center_vertical"
                    android:completionThreshold="2"
                    android:dropDownHeight="200dp"/>

                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="110dp"
                    android:layout_height="52dp"
                    android:backgroundTint="#E85F4C"
                    android:text="@string/buttonSearch"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <!-- ⭐ AJOUTE CETTE LISTVIEW ICI ⭐ -->
            <ListView
                android:id="@+id/suggestions_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:visibility="gone"
                android:maxHeight="200dp"/>

            <!-- Catégories circulaires -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <!-- tapis -->
                    <LinearLayout
                        android:id="@+id/cat_tapis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/tapis"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tapestry"
                            android:textSize="13sp"
                            android:paddingBottom="6dp"/>
                    </LinearLayout>

                    <!-- food-->
                    <LinearLayout
                        android:id="@+id/cat_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/food"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/food"
                            android:textSize="13sp"
                            android:paddingBottom="6dp"/>
                    </LinearLayout>

                    <!-- Potterie -->
                    <LinearLayout
                        android:id="@+id/cat_potterie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/pot"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pottery"
                            android:textSize="13sp"
                            android:paddingBottom="6dp"/>
                    </LinearLayout>

                    <!-- Traditional Wear -->
                    <LinearLayout
                        android:id="@+id/cat_traditional_wear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/wear"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/traditional_wear"
                            android:textSize="13sp"
                            android:paddingBottom="6dp"/>
                    </LinearLayout>

                    <!-- Leather Crafts -->
                    <LinearLayout
                        android:id="@+id/cat_leather_crafts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/leather"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Leather Crafts"
                            android:textSize="13sp"
                            android:paddingBottom="6dp"/>
                    </LinearLayout>

                    <!-- herbs-->
                    <LinearLayout
                        android:id="@+id/cat_herbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/herbs"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/naturalProducts"
                            android:textSize="13sp"
                            android:paddingBottom="6dp"/>
                    </LinearLayout>

                    <!-- jwellery-->
                    <LinearLayout
                        android:id="@+id/cat_jwellery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/jewellery"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/jewellery"
                            android:textSize="13sp"
                            android:paddingBottom="6dp"/>
                    </LinearLayout>

                    <!-- Metal-->
                    <LinearLayout
                        android:id="@+id/cat_metal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/metal"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/metal"
                            android:textSize="13sp"
                            android:paddingBottom="6dp"/>
                    </LinearLayout>

                    <!-- drawing -->
                    <LinearLayout
                        android:id="@+id/cat_draws"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/draws"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/paintings"
                            android:textSize="13sp"
                            android:paddingBottom="6dp"/>
                    </LinearLayout>

                    <!-- Wood -->
                    <LinearLayout
                        android:id="@+id/cat_wood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/wood"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/woodwork"
                            android:textSize="13sp"
                            android:paddingBottom="6dp"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>


            <!-- Filtres -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="24dp"
                android:gravity="center_vertical"
                android:paddingTop="24dp">

                <Button
                    android:id="@+id/btn_promotions"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="Promotion"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#E85F4C"
                    android:textColor="#FFFFFF"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"/>

                <Button
                    android:id="@+id/btnLiv"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="Delivery"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#E85F4C"
                    android:textColor="#FFFFFF"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"/>

                <Button
                    android:id="@+id/btn_sort_by"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="@string/Sort"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#E85F4C"
                    android:textColor="#FFFFFF"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"/>

                <Button
                    android:id="@+id/btn_top_rated"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="@string/Top"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#E85F4C"
                    android:textColor="#FFFFFF"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/textView_not_found"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Élément introuvable"
                android:textSize="18sp"
                android:textColor="#E85F4C"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone"
                android:drawableTop="@android:drawable/ic_menu_search"
                android:drawablePadding="16dp"/>

            <!-- RecyclerView pour les boutiques -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="90dp"/>

            <!-- ProgressBar centré -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

