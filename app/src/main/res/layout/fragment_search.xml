<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
>

    <!-- Contenu principal -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:fillViewport="false"
        tools:ignore="UnknownId">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top">

            <RelativeLayout
                android:id="@+id/header_produits"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="24dp">

                <!-- Texte "Products" -->
                <TextView
                    android:id="@+id/textView_produits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/pageTitle"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:fontFamily="serif"
                    android:letterSpacing="-0.02"/>

                <!-- Sélecteur de ville -->
                <LinearLayout
                    android:id="@+id/location_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:background="@drawable/location_selector_bg"
                    android:paddingStart="12dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/map"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="@drawable/map"/>

                    <TextView
                        android:id="@+id/textView_ville"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location"
                        android:textSize="15sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textStyle="bold"/>
                </LinearLayout>
            </RelativeLayout>


            <!-- Barre de recherche -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="20dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/search_input"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/search_input_bg"
                    android:hint="@string/searchHint"
                    android:textColorHint="#A0A0A0"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:gravity="center_vertical|start"
                    android:minHeight="0dp"
                    android:includeFontPadding="false"
                    android:inputType="text"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="110dp"
                    android:layout_height="52dp"
                    android:backgroundTint="#E85F4C"
                    android:text="@string/buttonSearch"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <!-- Catégories circulaires -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <!-- tapis -->
                    <LinearLayout
                        android:id="@+id/cat_tapis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/tapis"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tapestry"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorPrimary"/>
                    </LinearLayout>

                    <!-- food-->
                    <LinearLayout
                        android:id="@+id/cat_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/food"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/food"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorPrimary"/>
                    </LinearLayout>

                    <!-- Potterie -->
                    <LinearLayout
                        android:id="@+id/cat_potterie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/pot"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pottery"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorPrimary"/>
                    </LinearLayout>

                    <!-- herbs-->
                    <LinearLayout
                        android:id="@+id/cat_herbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/herbs"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/naturalProducts"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorPrimary"/>
                    </LinearLayout>

                    <!-- jwellery-->
                    <LinearLayout
                        android:id="@+id/cat_jwellery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/jwellery"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/jewellery"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorPrimary"/>
                    </LinearLayout>

                    <!-- Metal-->
                    <LinearLayout
                        android:id="@+id/cat_metal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/metal"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/metal"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorPrimary"/>
                    </LinearLayout>

                    <!-- drawing -->
                    <LinearLayout
                        android:id="@+id/cat_draws"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/draws"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/paintings"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorPrimary"/>
                    </LinearLayout>

                    <!-- Wood -->
                    <LinearLayout
                        android:id="@+id/cat_wood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5E6D8"
                                app:srcCompat="@drawable/wood"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/woodwork"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorPrimary"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
            <!-- Filtres -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="24dp"
                android:gravity="center_vertical"
                android:paddingTop="24dp">

                <Button
                    android:id="@+id/btn_promotions"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="@string/Pro"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#E85F4C"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btn_object_type"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="@string/Type"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#E85F4C"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btn_sort_by"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="@string/Sort"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#E85F4C"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btn_top_rated"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="@string/Top"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#E85F4C"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>



            <!-- Liste des produits -->
            <LinearLayout
                android:id="@+id/layout_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="90dp">

                <!-- Produit 1: Mohammed Potterie -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/product_img_1"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/potterie"/>

                        <!-- Info overlay -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/product_img_1"
                            android:orientation="vertical"
                            android:background="#E85F4C"
                            android:padding="16dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Mohammed Pottery"
                                        android:textSize="19sp"
                                        android:textStyle="bold"
                                        android:textColor="#FFFFFF"/>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="6dp"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            app:tint="#FFFFFF"
                                            android:layout_marginEnd="4dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="90%"
                                            android:textSize="14sp"
                                            android:textStyle="bold"
                                            android:textColor="#FFFFFF"
                                            android:layout_marginEnd="4dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="(404)"
                                            android:textSize="13sp"
                                            android:textColor="#D0D0D0"
                                            android:layout_marginEnd="8dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=", Oujda , Andalous."
                                            android:textSize="13sp"
                                            android:textColor="#D0D0D0"/>
                                    </LinearLayout>
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/star"
                                    app:tint="#FFFFFF"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="4dp"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Produit 2: Épices -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/product_img_2"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/epices"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/product_img_2"
                            android:orientation="vertical"
                            android:background="#E85F4C"
                            android:padding="16dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Épices Traditionnelles"
                                        android:textSize="19sp"
                                        android:textStyle="bold"
                                        android:textColor="#FFFFFF"/>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="6dp"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            app:tint="#FFFFFF"
                                            android:layout_marginEnd="4dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="95%"
                                            android:textSize="14sp"
                                            android:textStyle="bold"
                                            android:textColor="#FFFFFF"
                                            android:layout_marginEnd="4dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="(678)"
                                            android:textSize="13sp"
                                            android:textColor="#D0D0D0"
                                            android:layout_marginEnd="8dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=", Marrakech."
                                            android:textSize="13sp"
                                            android:textColor="#D0D0D0"/>
                                    </LinearLayout>
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/star"
                                    app:tint="#FFFFFF"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="4dp"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
