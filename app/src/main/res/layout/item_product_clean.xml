<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Product Image Carousel -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#FAFAFA">

            <com.example.soukify.ui.shop.ProductImageCarousel
                android:id="@+id/productImageCarousel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- More Button at center-bottom of image -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/seeMoreButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="8dp"
                android:text="More"
                android:textColor="#E85F4C"
                android:textSize="12sp"
                android:textStyle="bold"
                android:minHeight="36dp"
                android:minWidth="60dp"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                android:backgroundTint="#F5E5D8"
                app:strokeColor="#E85F4C"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_send"
                app:iconTint="#E85F4C"
                app:iconSize="14dp"
                app:iconPadding="4dp" />

        </FrameLayout>

        <!-- Product Info Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section: Name and Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">

                <!-- Product Name -->
                <TextView
                    android:id="@+id/productName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Product Name"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp" />

                <!-- Product Type Badge -->
                <TextView
                    android:id="@+id/productType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/product_type_badge_background"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="4dp"
                    android:text="Type"
                    android:textColor="#E85F4C"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Product Description -->
            <TextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Description..."
                android:textColor="#616161"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp" />

            <!-- Price and Currency Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Price -->
                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.00"
                    android:textColor="#E53935"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:lineSpacingExtra="2dp" />

                <!-- Currency -->
                <TextView
                    android:id="@+id/productCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="MAD"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>