<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blurred_image">

    <!-- App Bar with Back Button -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#F5E5D8"
            android:elevation="4dp"
            app:navigationIcon="@drawable/ic_back_arrow"
            app:navigationIconTint="#E85F4C"
            app:title="Product Details"
            app:titleTextColor="#000000"
            android:textStyle="bold"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetLeft="0dp">

            <!-- Action Buttons in Toolbar -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="end">

                <ImageButton
                    android:id="@+id/editButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_edit"
                    android:tint="#E85F4C"
                    android:contentDescription="Edit product" />

                <ImageButton
                    android:id="@+id/deleteButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_baseline_delete_24"
                    android:tint="#E85F4C"
                    android:contentDescription="Delete product" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Product Image Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:nestedScrollingEnabled="false">

                    <!-- Multiple Image Preview Area - Carousel -->
                    <com.example.soukify.ui.shop.ProductImageCarousel
                        android:id="@+id/productImageCarousel"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:visibility="visible"
                        android:nestedScrollingEnabled="false" />

                    <!-- Single Image Preview -->
                    <ImageView
                        android:id="@+id/productImage"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:scaleType="centerCrop"
                        android:background="#F5F5F5"
                        android:visibility="gone" />

                    <!-- Image Placeholder -->
                    <LinearLayout
                        android:id="@+id/imagePlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="#F8F9FA">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:tint="#CBD5E0"
                            android:alpha="0.8" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="No Image"
                            android:textColor="#718096"
                            android:textSize="14sp" />

                    </LinearLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Product Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Product Name, Type, and Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/productName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Product Name"
                                android:textColor="#1A202C"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/productType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/product_type_badge_background"
                                android:paddingStart="8dp"
                                android:paddingTop="4dp"
                                android:paddingEnd="8dp"
                                android:paddingBottom="4dp"
                                android:text="Type"
                                android:textColor="#E85F4C"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Like and Favorite Buttons -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginStart="8dp">

                            <!-- Like Button -->
                            <ImageButton
                                android:id="@+id/likeButton"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/ic_heart_outline"
                                android:background="?attr/selectableItemBackground"
                                android:scaleType="centerCrop"
                                android:contentDescription="Like" />

                            <!-- Likes Count -->
                            <TextView
                                android:id="@+id/likesCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="12sp"
                                android:layout_marginEnd="12dp"
                                android:textColor="#757575" />

                            <!-- Favorite Button -->
                            <ImageButton
                                android:id="@+id/favoriteButton"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/ic_star_outline"
                                android:background="?attr/selectableItemBackground"
                                android:scaleType="centerCrop"
                                android:contentDescription="Favorite" />

                            <!-- Favorites Count -->
                            <TextView
                                android:id="@+id/favoritesCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="12sp"
                                android:textColor="#757575" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Price Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp"
                        android:background="#FFF5F5">

                        <TextView
                            android:id="@+id/productPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0.00"
                            android:textColor="#E53E3E"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/productCurrency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="MAD"
                            android:textColor="#212121"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Description Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textColor="#4A5568"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/productDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Product description will appear here..."
                            android:textColor="#2D3748"
                            android:textSize="14sp"
                            android:lineSpacingExtra="2dp"
                            android:padding="12dp"
                            android:background="#F7FAFC"
                            android:minHeight="80dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Product Details Section (Optional) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/productDetailsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Details"
                        android:textColor="#4A5568"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- Weight Row -->
                    <LinearLayout
                        android:id="@+id/weightRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Weight"
                            android:textColor="#718096"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/productWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 kg"
                            android:textColor="#2D3748"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Length Row -->
                    <LinearLayout
                        android:id="@+id/lengthRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Length"
                            android:textColor="#718096"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/productLength"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 cm"
                            android:textColor="#2D3748"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Width Row -->
                    <LinearLayout
                        android:id="@+id/widthRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Width"
                            android:textColor="#718096"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/productWidth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 cm"
                            android:textColor="#2D3748"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Height Row -->
                    <LinearLayout
                        android:id="@+id/heightRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Height"
                            android:textColor="#718096"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/productHeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 cm"
                            android:textColor="#2D3748"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Color Row -->
                    <LinearLayout
                        android:id="@+id/colorRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Color"
                            android:textColor="#718096"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/productColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textColor="#2D3748"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Material Row -->
                    <LinearLayout
                        android:id="@+id/materialRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Material"
                            android:textColor="#718096"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/productMaterial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textColor="#2D3748"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Contact Seller Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Seller"
                        android:textColor="#4A5568"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/callButton"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="24dp"
                            android:background="@drawable/product_type_badge_background"
                            android:src="@android:drawable/ic_menu_call"
                            android:tint="#E85F4C"
                            android:contentDescription="Call seller" />

                        <ImageButton
                            android:id="@+id/emailButton"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/product_type_badge_background"
                            android:src="@android:drawable/ic_menu_send"
                            android:tint="#E85F4C"
                            android:contentDescription="Email seller" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
