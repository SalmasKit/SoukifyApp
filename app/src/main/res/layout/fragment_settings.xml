<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Profile Section -->
            <LinearLayout
                android:id="@+id/profileSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_profile_placeholder"
                    android:contentDescription="@string/profile_image"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/userEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="user@example.com"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/editProfileButton"
                        style="@style/Widget.Soukify.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/edit_profile"
                        android:textSize="12sp"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="1dp"
                        app:rippleColor="@color/colorPrimaryLight" />
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0" />

            <!-- Settings Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Account Settings -->
                <com.example.soukify.view.SettingItemView
                    android:id="@+id/accountSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:settingIcon="@drawable/ic_person"
                    app:settingTitle="@string/account_settings"
                    app:showDivider="true"
                    app:showChevron="true" />

                <!-- Notifications -->
                <com.example.soukify.view.SettingItemView
                    android:id="@+id/notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:settingIcon="@drawable/ic_notifications"
                    app:settingTitle="@string/notifications"
                    app:showDivider="true"
                    app:showChevron="true" />

                <!-- Privacy -->
                <com.example.soukify.view.SettingItemView
                    android:id="@+id/privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:settingIcon="@drawable/ic_privacy"
                    app:settingTitle="@string/privacy"
                    app:showDivider="true"
                    app:showChevron="true" />

                <!-- Help & Support -->
                <com.example.soukify.view.SettingItemView
                    android:id="@+id/helpSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:settingIcon="@drawable/ic_help"
                    app:settingTitle="@string/help_support"
                    app:showDivider="true"
                    app:showChevron="true" />

                <!-- About -->
                <com.example.soukify.view.SettingItemView
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:settingIcon="@drawable/ic_info"
                    app:settingTitle="@string/about"
                    app:showDivider="false"
                    app:showChevron="true" />
            </LinearLayout>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/logoutButton"
                style="@style/Widget.Soukify.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/ic_logout"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:text="@string/logout"
                android:textAlignment="textStart"
                android:textSize="16sp"
                app:iconTint="@color/colorPrimary"
                app:rippleColor="@color/colorPrimaryLight"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
