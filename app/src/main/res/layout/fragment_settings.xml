<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blurred_image"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Profile Section -->
            <LinearLayout
                android:id="@+id/profileSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="@dimen/profile_avatar_size"
                    android:layout_height="@dimen/profile_avatar_size"
                    android:src="@drawable/ic_profile_placeholder"
                    android:contentDescription="@string/profile_image"
                    android:scaleType="centerCrop"
                    android:padding="@dimen/spacing_xs"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/userName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_name"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_title"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/userEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="user@example.com"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="@dimen/text_body" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/editProfileButton"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="80dp"
                            android:minHeight="0dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="@string/open_shop_stacked"
                            android:textColor="@color/onPrimary"
                            android:textSize="@dimen/text_body"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:letterSpacing="0"
                            android:lineSpacingExtra="2dp"
                            app:backgroundTint="@color/colorPrimary"
                            app:cornerRadius="20dp"
                            app:rippleColor="@color/colorPrimaryDark" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0" />

            <!-- Settings Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Account Settings -->
                <com.example.soukify.view.SettingItemView
                    android:id="@+id/accountSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    app:settingIcon="@drawable/ic_person"
                    app:settingTitle="@string/account_settings"
                    app:showDivider="true"
                    app:showChevron="true" />

                <!-- Notifications -->
                <com.example.soukify.view.SettingItemView
                    android:id="@+id/notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:settingIcon="@drawable/ic_notifications"
                    app:settingTitle="@string/notifications"
                    app:showDivider="true"
                    app:showChevron="true" />

                <!-- Appearance (Theme) -->
                <com.example.soukify.view.SettingItemView
                    android:id="@+id/themeAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:settingIcon="@drawable/ic_sun"
                    app:settingTitle="@string/appearance"
                    app:showDivider="true"
                    app:showChevron="true" />

                <!-- Language & Currency -->
                <com.example.soukify.view.SettingItemView
                    android:id="@+id/languageCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:settingIcon="@drawable/ic_language"
                    app:settingTitle="@string/language_and_currency"
                    app:showDivider="true"
                    app:showChevron="true" />

                <!-- Privacy -->
                <com.example.soukify.view.SettingItemView
                    android:id="@+id/privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:settingIcon="@drawable/ic_privacy"
                    app:settingTitle="@string/privacy"
                    app:showDivider="true"
                    app:showChevron="true" />

                <!-- Help & Support -->
                <com.example.soukify.view.SettingItemView
                    android:id="@+id/helpSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:settingIcon="@drawable/ic_help"
                    app:settingTitle="@string/help_support"
                    app:showDivider="true"
                    app:showChevron="true" />

                <!-- About -->
                <com.example.soukify.view.SettingItemView
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:settingIcon="@drawable/ic_info"
                    app:settingTitle="@string/about"
                    app:showDivider="false"
                    app:showChevron="true" />
            </LinearLayout>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/logoutButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:padding="@dimen/spacing_small"
                android:text="@string/logout"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_subtitle"
                app:icon="@drawable/ic_logout"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/spacing_small"
                app:iconTint="@color/colorPrimary"
                app:rippleColor="@color/colorPrimaryLight"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
