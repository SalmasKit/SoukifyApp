<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image Upload - Cover Photo -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/ivShopPreview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"
                android:contentDescription="Shop Cover Photo"
                android:visibility="gone"
                android:background="@drawable/rounded_image_placeholder" />

            <LinearLayout
                android:id="@+id/imageContainer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:background="@drawable/image_container_enhanced"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="@color/colorPrimary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Cover Photo"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:9 ratio recommended"
                    android:layout_marginTop="4dp"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </FrameLayout>

        <!-- Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EnhancedInput"
                android:hint="Shop Name"
                app:startIconDrawable="@drawable/ic_store_24dp"
                app:startIconTint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etShopName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EnhancedInput"
                android:hint="Description"
                app:startIconDrawable="@drawable/ic_baseline_description_24"
                app:startIconTint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etShopDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EnhancedInput"
                android:hint="Phone"
                app:startIconDrawable="@drawable/ic_baseline_phone_24"
                app:startIconTint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etShopPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EnhancedInput"
                android:hint="Email"
                app:startIconDrawable="@drawable/ic_baseline_email_24"
                app:startIconTint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etShopEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Category Field -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/EnhancedSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Category"
                android:minHeight="60dp"
                app:startIconDrawable="@drawable/ic_category_grid_24"
                app:startIconTint="@color/colorPrimary"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/etShopCategory"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="none"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:dropDownVerticalOffset="0dp"
                    android:dropDownHeight="200dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Region Field -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/EnhancedSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Region"
                android:minHeight="60dp"
                app:startIconDrawable="@drawable/ic_place_24dp"
                app:startIconTint="@color/colorPrimary"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/etShopRegion"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="none"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:dropDownVerticalOffset="0dp"
                    android:dropDownHeight="200dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- City Field -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/EnhancedSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="City"
                android:minHeight="60dp"
                app:startIconDrawable="@drawable/ic_location_city_24dp"
                app:startIconTint="@color/colorPrimary"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/etShopCity"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="none"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:dropDownVerticalOffset="0dp"
                    android:dropDownHeight="200dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EnhancedInput"
                android:hint="Address"
                app:placeholderText="Street, Neighborhood, Landmarks... (Optional)"
                app:startIconDrawable="@drawable/ic_baseline_map_24"
                app:startIconTint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etShopAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:maxLines="3" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Working Hours Selector -->
            <include layout="@layout/working_hours_basic" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EnhancedInput"
                android:hint="Instagram"
                app:placeholderText="@username (Optional)"
                app:startIconDrawable="@drawable/ic_instagram_24dp"
                app:startIconTint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etShopInstagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EnhancedInput"
                android:hint="Facebook"
                app:placeholderText="Page name or URL (Optional)"
                app:startIconDrawable="@drawable/ic_facebook_24dp"
                app:startIconTint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etShopFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="2" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EnhancedInput"
                android:hint="Website"
                app:placeholderText="https://example.com (Optional)"
                app:startIconDrawable="@drawable/ic_website_24dp"
                app:startIconTint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etShopWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:maxLines="2" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Buttons -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
