<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Soukify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryLight</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryLightVariant</item>
        <item name="colorOnSecondary">@color/onBackground</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@drawable/bg_blurred_image</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundFloating">@color/surface</item>
        
        <!-- Text colors -->
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textColorPrimary">@color/onBackground</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        
        <!-- Bottom Navigation Style -->
        <item name="bottomNavigationStyle">@style/Widget.Soukify.BottomNavigationView</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.Soukify.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.Soukify.Button.Borderless</item>
    </style>

    <!-- Button style -->
    <style name="Widget.Soukify.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Borderless button style -->
    <style name="Widget.Soukify.Button.Borderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>