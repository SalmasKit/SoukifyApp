<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.soukify.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.soukify.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.example.soukify.ui.favorites.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites" />
 

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.soukify.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_navigation_settings_to_navigation_account_settings"
            app:destination="@id/navigation_account_settings" />
        <action
            android:id="@+id/action_navigation_settings_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
        <action
            android:id="@+id/action_navigation_settings_to_navigation_language_currency"
            app:destination="@id/navigation_language_currency" />
        <action
            android:id="@+id/action_navigation_settings_to_navigation_privacy"
            app:destination="@id/navigation_privacy" />
        <action
            android:id="@+id/action_navigation_settings_to_navigation_help_support"
            app:destination="@id/navigation_help_support" />
        <action
            android:id="@+id/action_navigation_settings_to_navigation_about"
            app:destination="@id/navigation_about" />
         <action
            android:id="@+id/action_navigation_settings_to_navigation_shop"
            app:destination="@id/navigation_shop" />    
    </fragment>

    <fragment
        android:id="@+id/navigation_shop"
        android:name="com.example.soukify.ui.shop.ShopFragment"
        android:label="My Shop"
        tools:layout="@layout/fragment_shop">

        <action
            android:id="@+id/action_navigation_shop_to_productDetail"
            app:destination="@id/productDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.soukify.ui.shop.ProductDetailFragment"
        android:label="Product Details"
        tools:layout="@layout/fragment_product_detail">

        <argument
            android:name="product"
            app:argType="com.example.soukify.data.models.ProductModel" />

    </fragment>

    <fragment
        android:id="@+id/navigation_account_settings"
        android:name="com.example.soukify.ui.settings.AccountSettingsFragment"
        android:label="Account Settings"
        tools:layout="@layout/fragment_account_settings" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.soukify.ui.settings.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_language_currency"
        android:name="com.example.soukify.ui.settings.LanguageCurrencyFragment"
        android:label="Language &amp; Currency"
        tools:layout="@layout/fragment_language_currency" />

    <fragment
        android:id="@+id/navigation_privacy"
        android:name="com.example.soukify.ui.settings.PrivacyFragment"
        android:label="Privacy"
        tools:layout="@layout/fragment_privacy" />

    <fragment
        android:id="@+id/navigation_help_support"
        android:name="com.example.soukify.ui.settings.HelpSupportFragment"
        android:label="Help &amp; Support"
        tools:layout="@layout/fragment_help_support" />

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.example.soukify.ui.settings.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />


</navigation>