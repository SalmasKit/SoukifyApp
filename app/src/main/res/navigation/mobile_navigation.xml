<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.soukify.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.soukify.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.example.soukify.ui.favorites.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.soukify.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_navigation_settings_to_navigation_account_settings"
            app:destination="@id/navigation_account_settings" />
        <action
            android:id="@+id/action_navigation_settings_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
        <action
            android:id="@+id/action_navigation_settings_to_navigation_language_currency"
            app:destination="@id/navigation_language_currency" />
        <action
            android:id="@+id/action_navigation_settings_to_navigation_privacy"
            app:destination="@id/navigation_privacy" />
    </fragment>

    <fragment
        android:id="@+id/navigation_account_settings"
        android:name="com.example.soukify.ui.settings.AccountSettingsFragment"
        android:label="Account Settings"
        tools:layout="@layout/fragment_account_settings" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.soukify.ui.settings.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_language_currency"
        android:name="com.example.soukify.ui.settings.LanguageCurrencyFragment"
        android:label="Language &amp; Currency"
        tools:layout="@layout/fragment_language_currency" />

    <fragment
        android:id="@+id/navigation_privacy"
        android:name="com.example.soukify.ui.settings.PrivacyFragment"
        android:label="Privacy"
        tools:layout="@layout/fragment_privacy" />
</navigation>